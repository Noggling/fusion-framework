{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "removeComments": false,
    "declaration": true,
  },
  "exclude": ["**/dist", "**/node_modules"],
  "typedocOptions": {
    "entryPoints": [
      "./packages/framework",
      "./packages/framework-react",
      "./packages/module",
      "./packages/module-http",
      "./packages/module-msal",
      "./packages/module-service-discovery",
      "./packages/react-app",
    ],
    "entryPointStrategy": "packages",
    "readme": "./README.md",
    "out": "docs",
    "hideGenerator": true,
    "includes": [
      "./packages/framework-react"
    ]
  }
}