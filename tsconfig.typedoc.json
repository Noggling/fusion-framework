{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "removeComments": false,
    "declaration": true,
  },
  "exclude": ["**/dist", "**/node_modules"],
  "typedocOptions": {
    "entryPoints": ["."],
    "entryPointStrategy": "packages",
    "readme": "./README.md",
    "out": "docs",
    "hideGenerator": true,
    "includes": [
      "./packages/framework-react"
    ]
  },
  "references": [
    {
      "path": "./packages/framework"
    },
    {
      "path": "./packages/framework-react"
    },
    {
      "path": "./packages/module"
    },
    {
      "path": "./packages/module-http"
    },
    {
      "path": "./packages/module-msal"
    },
    {
      "path": "./packages/module-service-discovery"
    },
    {
      "path": "./packages/react-app"
    },
  ]
}