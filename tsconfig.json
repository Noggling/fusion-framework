{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "incremental": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "noEmit": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
  },
  "include": [
    "packages/*/src",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "*.spec.ts",
  ],
  "files": [],
}